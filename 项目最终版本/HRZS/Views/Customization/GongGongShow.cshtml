
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/vue/dist/vue.js"></script>
    <link href="~/Scripts/element-ui/lib/theme-chalk/index.css" rel="stylesheet" />
    <script src="~/Scripts/element-ui/lib/index.js"></script>
    <script src="~/Scripts/axios/dist/axios.js"></script>
    <title>GongGongShow</title>
</head>
<body>
    <div>
        <div id="app">
            <el-card class="box-card">
                <div slot="header" class="clearfix">
                    <el-breadcrumb separator="/">
                        <el-breadcrumb-item>您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--职位设置  </el-breadcrumb-item>
                    </el-breadcrumb>
                </div>

                <div>
                    <el-row>
                        <el-col :span="6">
                            <el-button type="primary" size="small"  v-on:click="insert()">添加</el-button>
                        </el-col>
                    </el-row>
                    <br />
                    <el-table :data="tableData"
                              style="width: 100%"
                              max-height="250">
                        <el-table-column prop="AttributeKind"
                                         label="属性种类">
                        </el-table-column>
                        <el-table-column prop="AttributeName"
                                         label="属性名称">
                        </el-table-column>
                        <el-table-column fixed="right"
                                         label="操作"
                                         width="120">
                            <template slot-scope="scope">
                                <el-button type="text"
                                           v-on:click="Delete(scope.row.PbcId)"
                                           size="small">
                                    删除
                                </el-button>
                            </template>
                        </el-table-column>
                    </el-table>
                    <el-pagination v-on:size-change="handleSizeChange"
                                   v-on:current-change="handleCurrentChange"
                                   :currentpage="currentPage"
                                   :page-sizes="[3,6,9,12]"
                                   :page-size="pageSize"
                                   layout="total, sizes, prev, pager, next, jumper"
                                   :total="rows">
                    </el-pagination>
                </div>

            </el-card>
        </div>
        <script>
            var vm = new Vue({
            el: "#app",
            data: {
                tableData: [],
                currentPage: 1,
                pageSize: 3,
                rows: 1,

            },
            methods: {
                //分页数据
                Fill() {
                    axios.get('/Customization/GongGongCha', {
                        params: {
                            CurrentPage: this.currentPage,
                            PageSize: this.pageSize
                        }
                    })
                        .then(res => {
                            console.log(res);
                            this.tableData = res.data.List;
                            this.rows = res.data.Rows;
                        })
                        .catch(err => {
                            console.log(err);
                        })

                },
                handleSizeChange: function (size) {
                    this.pageSize = size;
                    this.currentPage = 1;
                    this.Fill();
                },
                handleCurrentChange: function (cpage) {
                    this.currentPage = cpage;
                    this.Fill();
                },
                Delete: function (row) {
                    if (confirm("是否删除该信息") == true) {
                        window.location.href = "/Customization/CPCDelete/" + row;
                      /*  axios.get('/Customization/CPCDelete' + row)
                           .then(res => {
                            if (res.data > 0) {
                                t.$message({
                                    message: "删除成功",
                                    type: "success"
                                });
                                this.Fill();
                            } else {
                                t.$message({
                                    message: "删除失败",
                                    type: "error"
                                });
                            }
                        }).catch(err => {
                            console.info(err);
                            return;
                        })*/
                      
                    }
                },
                insert: () => {
                    window.location = "/Customization/CPCInsertShow/";
                }
            },
                mounted() {
                this.currentPage = 1;
                this.Fill();
            }

        })</script>
    </div>
</body>

</html>
