
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/vue/dist/vue.js"></script>
    <link href="~/Scripts/element-ui/lib/theme-chalk/index.css" rel="stylesheet" />
    <script src="~/Scripts/element-ui/lib/index.js"></script>
    <script src="~/Scripts/axios/dist/axios.js"></script>
    <title>ArchivePerpetualDeleteListShow</title>
</head>
<body>
    <div id="app">
        <el-card class="box-card">
            <div slot="header" class="clearfix">
                <el-breadcrumb separator="/">
                    <el-breadcrumb-item>您正在做的业务是：人力资源--人力资源档案管理--人力资源档案永久删除</el-breadcrumb-item>
                </el-breadcrumb>
                <el-breadcrumb separator="/">
                    <el-breadcrumb-item>符合条件的人力资源档案总数：{{rows}}例  </el-breadcrumb-item>
                </el-breadcrumb>
            </div>
           
                <el-row>
                    <el-col :span="24">
                        <el-table :data="tableData3"
                                  :border="true" style="width: 100%">
                            <el-table-column prop="HumanId"
                                             label="档案编号"
                                             width="180">
                            </el-table-column>
                            <el-table-column prop="HumanName"
                                             label="姓名"
                                             width="180">
                            </el-table-column>
                            <el-table-column prop="HumanSex"
                                             label="性别"
                                             width="180">
                            </el-table-column>
                            <el-table-column prop="FirstKindName"
                                             label="I级机构"
                                             width="180">
                            </el-table-column>
                            <el-table-column prop="SecondKindName"
                                             label="II级机构"
                                             width="180">
                            </el-table-column>
                            <el-table-column prop="ThirdKindName"
                                             label="III级机构"
                                             width="180">
                            </el-table-column>
                            <el-table-column prop="HumanMajorKindName"
                                             label="职位分类"
                                             width="180">
                            </el-table-column>
                            <el-table-column prop="HunmaMajorName"
                                             label="职位名称"
                                             width="180">
                            </el-table-column>
                            <el-table-column label="操作">
                                <template slot-scope="scope">
                                    <el-button size="mini"
                                               v-on:click="DEL(scope.row.HufId)">永久删除</el-button>
                                </template>
                            </el-table-column>

                        </el-table>
                        <div class="block">
                            @*分页查询*@
                            <el-pagination v-on:size-change="handleSizeChange"
                                           v-on:current-change="handleCurrentChange"
                                           :currentpage="currentPage"
                                           :page-sizes="[3,6,9,12]"
                                           :page-size="pageSize"
                                           layout="total, sizes, prev, pager, next, jumper"
                                           :total="rows">
                            </el-pagination>
                        </div>
                    </el-col>
                </el-row>
        </el-card>
    </div>
    <script type="text/javascript">
	var vm=new Vue({
		el:"#app",
        data: {
			currentPage:1,
            pageSize: 3,
            rows: 1,
			tableData3:[],
			
		},
		methods:{
            fill() {
                var t = this;
                var condition1 = "1=1 and HumanFileStatus=3";
                axios.get('/ArchiveRegistration/DanAnSelect', {
					params:{
                            PageSize: t.pageSize,
                            CurrentPage: t.currentPage,
                            condition: condition1
					}
				}).then(res=>{
					console.info(res);
					t.tableData3 = res.data.List;
					t.rows = res.data.Rows;
				})
			},
			handleSizeChange: function (size) {
                this.pageSize = size;
                this.currentPage = 1;
                this.ss();
			},
            handleCurrentChange: function (cpage) {

                this.currentPage = cpage;
                this.ss();
            },

            DEL(HufId) {
                this.$confirm('此操作将永久删除该档案信息, 是否继续?', '提示', {
                    confirmButtonText: '确定',
                    cancelButtonText: '取消',
                    type: 'warning'
                }).then(() => {
                    axios.get("/ArchiveDeleteManagement/DleteHF/" + HufId)
                        .then(res => {
                            this.fill();
                        })
                        .catch(err => {
                            console.log(err);
                        });

                    this.$message({
                        type: 'success',
                        message: '删除成功!'
                    });
                }).catch(() => {
                    this.$message({
                        type: 'info',
                        message: '已取消删除'
                    });
                });
              
			}
		},
        mounted: function () {
            this.fill();    
		}
	})
    </script>
</body>
</html>
